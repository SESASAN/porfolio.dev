---
import '@fontsource-variable/onest'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'

interface Props{

	title: string,
	description: string

}

const { description, title } = Astro.props
---


<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" href="https://avatars.githubusercontent.com/u/19227127?v=4" />
		<title>{title}</title>
	</head>
	<body class="bg-neutral-950 relative min-h-screen">
		<div class="absolute inset-0 z-[-2] w-full min-h-full bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(189,38,6,0.3),rgba(255,255,255,0))] pointer-events-none"></div>
		<Header>
		</Header>
		<div class="flex flex-col grow">
			<slot />
		</div>
		<Footer class="mt-10">
		</Footer>
	</body>
	
</html>

<style is:global>
	:root{
		color-scheme: light dark;
	}
	html {
		
		font-family: "Onest Variable", system-ui, sans-serif;
		scroll-behavior: smooth;
	}
	body{
		background: #050505;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}

	@media (prefers-reduced-motion: reduce){
		html{
			scroll-behavior: auto;
		}
	}
</style>
